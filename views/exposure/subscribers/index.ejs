<%- include('../../includes/head.ejs') %>
<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/javascripts/exposure.js"></script>
<link rel="stylesheet" href="/stylesheets/exposure.css">
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>
  <main>
      <%- include('../commonNav.ejs') %>
    <div class="container">





<h2 class="center">フォロー中</h2>
<div class="center">
  <a class="button" href="/subscribers/new">新規登録</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% subscribers.forEach(subscriber => { %>
    <tr>
      <td>
        <a href="<%= `/subscribers/${subscriber._id}` %>">
          <%= subscriber.name %>
        </a>
      </td>
      <td>
        <%= subscriber.email %>
      </td>
      <td>
        <a href="<%=`subscribers/${subscriber._id}/edit`%>">
          ✏️
        </a>
      </td>
      <td>
        <a href="<%= `subscribers/${subscriber._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>🗑</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>


</div>
</main>

<%- include('../../includes//end.ejs') %>